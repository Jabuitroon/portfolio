---
const { platform, userName } = Astro.props
---

<li>
  <a
    class={`${platform} item`}
    target='_blank'
    href=`https://${platform}.com/${userName}`
    title=`Follow on ${platform}`
  >
    <slot />
    <span class='sr-only'>Follow on {platform}</span></a
  >
</li>

<style define:vars={{ platform }}>
  .item {
    position: relative;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 55px;
    height: 55px;
    transition: all 0.3s ease;
    padding: 2px 10px;
  }

  .item:hover {
    width: 135%;
  }
</style>
