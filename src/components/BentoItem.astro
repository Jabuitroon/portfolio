---
interface Props {
  class?: string;
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<article
  class={`${Astro.props.class} col-span-5 relative rounded-xl backdrop-blur-md border border-black/10 shadow-inner shadow-white/10 group overflow-hidden`}
>
  <slot name="image" />
  <div
    class="absolute z-10 flex flex-col justify-end group-hover:scale-y-150 group-hover:-translate-y-12 bottom-0 top-0 w-full h-full bg-gradient-to-b from-transparent from-40% via-black/50 to-black/80"
  >
  <header>Una tecnologia</header>
  </div>
  <div
    class="relative select-none flex flex-col gap-1 p-6 text-lg z-20 h-full justify-end transition-all hover:-translate-y-12"
  >
    <h2 class="text-3xl semi-bold text-balance text-white mb-4">{title}</h2>
    {subtitle && <h3 class="text-xl semi-bold text-sky-200/80">{subtitle}</h3>}
    <slot name="content" />
  </div>
</article>
