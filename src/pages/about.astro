---
import { basics, awards, education } from "@cv";
const { name, summary } = basics;
const [edu, pro] = awards;

const skillColor = "#800F2F";
---

<section class="relative flex flex-col w-full max-w-3xl mx-auto">
  <div class="flex h-screen w-full max-w-3xl p-4">
    <article class="flex flex-col justify-center text-left text-pretty">
      <h1 class="text-4xl font-bold my-5">Soy {name}</h1>
      <p class="text-lg indent-6 text-clip overflow-hidden text-[#c9184a]">
        {summary}
      </p>
    </article>
    <figure class="profile_pic w-full max-w-72 flex flex-col justify-center">
      <img
        class="w-full rounded-full"
        src="../../public/profile.jpg"
        alt="Mi foto de presentaciÃ³n a mi portafolio"
      />
    </figure>
  </div>
  <div class="relative w-full max-w-3xl mx-auto p-4">
    <h2 class="text-2xl">{edu.title}</h2>
    <ul class="flex flex-col gap-8">
      {
        education.map(
          ({ institution, studyType, area, startDate, endDate }) => {
            const endYear = endDate !== null ? `${endDate}` : "Actualmente"
            return (
              <li>
                <article>
                  <header>
                    <h3>{area}</h3>
                    <h2>{institution}</h2>
                  </header>
                  <footer>
                    <p>{studyType}</p>
                    <p>{`${startDate} - ${endYear}`}</p>
                  </footer>
                </article>
              </li>
            )
          }
        )
      }
    </ul>
    <h2 class="text-2xl">{pro.title}</h2>
  </div>
</section>

<style define:vars={{ skillColor }}>
  h1 {
    color: var(--skillColor);
  }
  .dark h1 {
    color: #fff0f3;
  }
  .skill {
    color: var(--skillColor);
    font-weight: bold;
  }
</style>
